<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    tools:context="com.sheilambadi.android.tictactoe.multiplayer.BoardSizeActivity"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            fontPath="fonts/Pacifico/Pacifico-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:text="Player 1 choose X or O"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@android:drawable/btn_dropdown" />

        <TextView
            fontPath="fonts/Pacifico/Pacifico-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:text="Choose Board Size"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corners"
            android:elevation="2dp"
            android:onClick="multiThree"
            android:padding="8dp"
            android:stateListAnimator="@null"
            android:text="3 X 3"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:translationZ="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corners"
            android:elevation="2dp"
            android:onClick="multiFive"
            android:padding="8dp"
            android:stateListAnimator="@null"
            android:text="5 X 5"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:translationZ="2dp" />


    </LinearLayout>
</ScrollView>